<html t:type="layout" title="NewEmployee | sampleapplication"
      xmlns:t="http://tapestry.apache.org/schema/tapestry_5_3.xsd">

<div class="row">
    <div class="col-md-10">
        <br/><br/><t:form class="form-horizontal" t:id="inputs" context="id">
            <div class="form-group">
                <t:label for="name" class="col-sm-3"/>
                <div class="col-sm-3">
                    <input t:type="TextField" t:id="name" validate="required, maxlength=15"/>
                </div>
            </div>
            <div class="form-group">
                <t:label for="age" class="col-sm-3"/>
                <div class="col-sm-3">
                    <input t:type="TextField" t:id="age" validate="required, maxlength=2"/>
                </div>
            </div>
            <div class="form-group">
                <t:label for="address" class="col-sm-3"/>
                <div class="col-sm-5">
                    <t:textarea t:id="address" validate="required, maxlength=50"/>
                </div>
            </div>
            <div class="form-group">
                <div class="col-sm-3 col-sm-offset-4">
                    <t:submit value="Save"/>
                </div>
            </div>
        </t:form>
    </div>
</div>
</html>